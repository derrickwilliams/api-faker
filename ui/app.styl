h1
  margin: 30px 0

.app
  display: flex
  height: 100vh

.side-panel
  width: 30%
  border-right: dashed 2px #26C281
  > h2
    text-align: center
    color: #26C281

.main-content
  box-sizing: border-box
  padding: 0px 50px
  width: 70%
  > h1
    color: #19B5FE

.main-form
  width: 80%
  margin: auto

.main-form__editor
  > div
    height: 400px

.main-form__buttons
  display: flex
  align-items: center
  margin: 30px 0
  > button
    &:first-child
      margin-left: auto

